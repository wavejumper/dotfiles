#!/bin/bash

SCREEN_COUNT=$(DISPLAY=:0 xrandr -q | grep ' connected' | wc -l)

echo $SCREEN_COUNT


if [ $SCREEN_COUNT -eq 2 ] ; then
  xrandr --output VIRTUAL1 --off --output DP3 --off --output eDP1 --mode 2560x1600 --pos 0x0 --rotate normal --output DP1 --off --output DP2 --off --output HDMI3 --off --output HDMI2 --off --output HDMI1 --mode 1920x1080 --pos 2560x0 --rotate normal --output VGA1 --off
else
  xrandr --output VIRTUAL1 --off --output DP3 --off --output eDP1 --mode 2560x1600 --pos 0x0 --rotate normal --output DP1 --off --output DP2 --off --output HDMI3 --off --output HDMI2 --off --output HDMI1 --off --output VGA1 --off
fi
